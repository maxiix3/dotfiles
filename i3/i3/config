# startup
exec --no-startup-id nm-applet &
exec --no-startup-id feh --bg-scale ~/Pictures/wallhaven-139063.jpg &
#exec --no-startup-id touchegg
exec --no-startup-id syndaemon -t -k -i 2 -d &
exec --no-startup-id xss-lock -- /usr/bin/slimlock &

# Personal keybindings for multimedia keys
bindsym XF86AudioLowerVolume exec amixer -q set Master 5- && amixer -q set Master unmute
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5+ && amixer -q set Master unmute
bindsym XF86AudioMute exec $(amixer -q -D pulse sset Master toggle)
bindsym XF86MonBrightnessDown  exec  xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86TouchpadToggle exec ~/.i3/toggletouchpad.sh

# Personal keybindings for opning programs
bindsym $mod+c exec google-chrome-stable
bindsym $mod+m exec slimlock

# Gap set
smart_gaps on
# smart_borders on
for_window [class="^.*"] border pixel 0
set $default_gaps_inner 10
set $default_gaps_outer 0
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer
