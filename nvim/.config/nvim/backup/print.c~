#include "header.h"

/* lager en methode som skal printe ut hele filen den får inn.
 * Den går gjennom hele lenkelisten og printer ut linjene underveis.
 */
int print_fi(struct Node* n){
    struct Node* tmp;
    printf("printing the file: \n");
    tmp = n;
    while(tmp->next != NULL){
        tmp = tmp->next;
        printf("   %s", tmp->line);
    }
    printf("\n");
    return 0;
}
/* En methode som forklarer brukeren hvordan programmet skal brukes
 */
int print_opt(){
    printf("this is a program that can do a lot of differnt things with textfiles\n"
            "It got several options described below:\n"
            "command:  description\n\n"
            "print     it prints the file it was given      [print] [filename]\n"
            "random    prints a random line of your file    [random] [filename]\n"
            "remove    removes all the vowels               [remove] [filename]\n"
            "replace   replaces all the vowels              [replace][filename\n"
            "len       gives the len of the file            [len]    [filename]\n"
            );
    return 1;
}

