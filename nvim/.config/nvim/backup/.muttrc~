set imap_user=maximinh

# Adresseboka til UiO
#set query_command="/snacks/bin/perl -MCPAN ~/skript/mutt-ldap.pl '%s'" 

#----------------------------------------
# Skrive - svare paa e-post

set editor = "/usr/bin/vim -c 'set spell spelllang=nb' -c 'set tw=72' -c 'set filetype=mail' -c '/^$/+2'"
set attribution="Hei %v,\n\n%{%A %d. %b %Y} wrote %n:"
#set signature="~/.mutt/signature.txt"

# fix bcc to be hidden
unset write_bcc

set fast_reply=yes
set edit_headers
unset fcc_attach # No attachment in the record 


#----------------------------------------
# Lese e-post

# Headers
ignore *
unignore date: from: to: subject: cc: user-agent: x-mailer:
hdr_order date: from: to: subject: cc: user-agent: x-mailer: 

# Utskrift
#set print_command="~/skript/muttprint-0.73/muttprint"

# set default sorting to threaded
set sort=threads

