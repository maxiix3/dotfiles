#set locale="nn_NO.utf-8" 
 
# UiO-ting 

set folder=imaps://imap.uio.no:993/INBOX 
set mbox=imaps://imap.uio.no:993/INBOX 
set postponed=imaps://imap.uio.no:993/INBOX.Drafts 
set record=imaps://imap.uio.no:993/INBOX.Sent 
