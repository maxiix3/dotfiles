#Farger 
source ~/.mutt/colors 
#passord
source "gpg -d ~/.mutt/uio_pass.gpg |"
bind index "^" imap-fetch-mail

# Tegnsett 
 
set charset=utf-8
#set send_charset=utf-8
set send_charset="iso-8859-1" 
#set locale="nn_NO.utf-8" 
 
# UiO-ting 

set folder=imaps://imap.uio.no:993/INBOX 
set mbox=imaps://imap.uio.no:993/INBOX 
set postponed=imaps://imap.uio.no:993/INBOX.Drafts 
set record=imaps://imap.uio.no:993/INBOX.Sent 
set spoolfile=imaps://imap.uio.no:993/INBOX
set smtp_url = "smtp://smtp.uio.no:587"

set realname = "Maximiliano Horta" 
#mailboxes = =spam
set from="Maximiliano Horta <maximinh@mail.uio.no>"
set imap_user=maximinh

# Adresseboka til UiO
set query_command = "perl ~/dotfiles/mutt/mutt-ldap.pl '%s'"
bind editor "\t" complete-query

#----------------------------------------
# Skrive - svare paa e-post

set editor = "/usr/bin/vim -c 'set spell spelllang=nb' -c 'set tw=72' -c 'set filetype=mail' -c '/^$/+2'"
set attribution="Hei %v,\n\n%{%A %d. %b %Y} wrote %n:"
#set signature="~/.mutt/signature.txt"

# fix bcc to be hidden
unset write_bcc

set fast_reply=yes
set edit_headers
unset fcc_attach # No attachment in the record 


#----------------------------------------
# Lese e-post

# Headers
ignore *
unignore date: from: to: subject: cc: user-agent: x-mailer:
hdr_order date: from: to: subject: cc: user-agent: x-mailer: 

# Utskrift
#set print_command="~/skript/muttprint-0.73/muttprint"

# set default sorting to threaded
set sort=threads
set sort_aux=last-date-received
# Å lese html
auto_view text/html
alternative_order text/enriched text/plain text/html 

